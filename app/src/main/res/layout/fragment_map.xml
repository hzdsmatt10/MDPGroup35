<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentMap"
    android:background="@color/black_24dp">

    <ToggleButton
        android:id="@+id/northObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/ic_north_obstacle"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/southObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:drawableTop="@drawable/ic_south_obstacle"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toEndOf="@+id/northObstacleToggleBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/westObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:drawableTop="@drawable/ic_west_obstacle"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toEndOf="@id/southObstacleToggleBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/eastObstacleToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:drawableTop="@drawable/ic_east_obstacle"
        android:textOff="PLOT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toEndOf="@id/westObstacleToggleBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/clearToggleBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:drawableTop="@drawable/ic_baseline_clear_24"
        android:scaleType="centerCrop"
        android:textOff="REMOVE"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/rotateLeftBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:drawableTop="@drawable/baseline_rotate_left_black_18"
        android:textOff="ROTATE LEFT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toEndOf="@+id/clearToggleBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/rotateRightBtn"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:drawableTop="@drawable/baseline_rotate_right_black_18"
        android:textOff="ROTATE RIGHT"
        android:textOn="CANCEL"
        android:textSize="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toEndOf="@+id/rotateLeftBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/setStartPointToggleBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textOff="SET STARTPOINT"
        android:textOn="CANCEL"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/setEditToggleBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textOff="EDIT"
        android:textOn="CANCEL"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/resetMapBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:text="RESET MAP"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetRobotBtn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="96dp"
        android:text="RESET ROBOT"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>